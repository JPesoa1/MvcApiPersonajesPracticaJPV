@model IEnumerable<MvcApiPersonajesPracticaJPV.Models.Personaje>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersoanje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersoanje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
               <a asp-controller="Personajes" asp-action="Details" asp-route-id="@item.IdPersoanje">Details</a>
               <a asp-controller="Personajes" asp-action="Edit" asp-route-id="@item.IdPersoanje">Edit</a>
               <a asp-controller="Personajes" asp-action="Delete" asp-route-id="@item.IdPersoanje">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
